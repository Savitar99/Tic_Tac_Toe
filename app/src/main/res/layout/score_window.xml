<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical">




    <Button
        android:id="@+id/btn_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Player"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_multiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplayer"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/btn_single"
        android:layout_alignLeft="@+id/btn_single"
        android:layout_alignStart="@+id/btn_single" />

    <Button
        android:id="@+id/btn_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Game"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/btn_multiplayer"
        android:layout_alignLeft="@+id/btn_multiplayer"
        android:layout_alignStart="@+id/btn_multiplayer" />


</RelativeLayout>