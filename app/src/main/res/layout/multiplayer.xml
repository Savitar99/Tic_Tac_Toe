<?xml version="1.0" encoding="utf-8"?>
<!-- Demonstrates using a relative layout to create a form -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark">

    <Button
        android:id="@+id/one"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_above="@+id/four"
        android:layout_toEndOf="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:padding="0px"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/two"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="135dp"
        android:layout_toEndOf="@+id/three"
        android:layout_toRightOf="@+id/three"
        android:padding="0px"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/three"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/two"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:padding="0px"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/four"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_below="@+id/two"
        android:layout_toEndOf="@+id/five"
        android:layout_toRightOf="@+id/five"
        android:padding="0px"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/five"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_below="@+id/two"
        android:layout_toEndOf="@+id/three"
        android:layout_toRightOf="@+id/three"
        android:padding="0px"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/six"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three"
        android:layout_below="@+id/three"
        android:padding="0px"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/seven"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_below="@+id/four"
        android:layout_toEndOf="@+id/eight"
        android:layout_toRightOf="@+id/eight"
        android:padding="0px"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/eight"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_below="@+id/five"
        android:layout_toEndOf="@+id/nine"
        android:layout_toRightOf="@+id/nine"
        android:padding="0px"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/nine"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignLeft="@+id/six"
        android:layout_alignStart="@+id/six"
        android:layout_below="@+id/six"
        android:padding="0px"
        android:text=" "
        android:textSize="70px" />

    <TextView
        android:id="@+id/dialogue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="800dp"
        android:gravity="center_horizontal"
        android:text="Click a button to start"
        android:textColor="@android:color/background_light"
        android:textSize="20px" />

</RelativeLayout>
